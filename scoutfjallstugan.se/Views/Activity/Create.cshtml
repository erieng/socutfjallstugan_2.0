      <div class="editor-label">
        @Html.LabelFor(model => model.ActivityDateStart)
      </div>
      <div class="editor-field">
        @Html.TextBoxFor(model => model.ActivityDateStart)
        @Html.ValidationMessageFor(model => model.ActivityDateStart)
      </div>

      <div class="editor-label">
        @Html.LabelFor(model => model.ActivityDateEnd)
      </div>
      <div class="editor-field">
        @Html.EditorFor(model => model.ActivityDateEnd)
        @Html.ValidationMessageFor(model => model.ActivityDateEnd)
      </div>

      <div class="editor-label">
        @Html.LabelFor(model => model.Description)
      </div>
      <div class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
      </div>

      <div class="editor-label">
        @Html.LabelFor(model => model.OnlyLeaders)
      </div>
      <div class="editor-field">
        @Html.EditorFor(model => model.OnlyLeaders)
        @Html.ValidationMessageFor(model => model.OnlyLeaders)
      </div>

      <div class="editor-label">
        @Html.LabelFor(model => model.Responsibility)
      </div>
      <div class="editor-field">
        @Html.EditorFor(model => model.Responsibility)
        @Html.ValidationMessageFor(model => model.Responsibility)
      </div>

      <p>
        <input type="submit" value="Create" />
      </p>
    </fieldset>
  }

  <div>
    @Html.ActionLink("Back to List", "Index")
  </div>
</body>
</html>
